<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/vainilla"
    tools:context=".HomeActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbal_layout"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="25pt">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="WorldBook"
        android:fontFamily="cursive"
        android:textSize="50dp"
        android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="Home"
            android:fontFamily="cursive"
            android:textSize="30dp"
            android:textColor="@color/black" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExplorarLibros"
        android:layout_margin="20dp"
        android:text="Explorar Libros"
        android:layout_marginTop="16dp"
        android:textColor="@color/vainilla"
        android:background="@color/brown"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFavoritos"
            android:layout_margin="20dp"
            android:text="Favoritos"
            android:layout_marginTop="16dp"
            android:textColor="@color/vainilla"
            android:background="@color/brown"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnYaLeidos"
            android:layout_margin="20dp"
            android:text="Ya LeÃ­dos"
            android:layout_marginTop="16dp"
            android:textColor="@color/vainilla"
            android:background="@color/brown"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>